{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan: Prepare",
            "type": "shell",
            "command": "conan",
            "args": [
                "install",
                "--profile:host=${workspaceFolder}/.conan/profiles/arm-none-eabi-gcc",
                "--profile:build=default",
                "--build=missing",
                "--install-folder=${workspaceFolder}/build",
                "."
            ]
        },
        {
            "label": "Conan: Build",
            "type": "shell",
            "command": "conan",
            "args": [
                "build",
                "--build-folder=${workspaceFolder}/build",
                "."
            ],
        },
        {
            "label": "Build",
            "dependsOn": ["Conan: Prepare", "Conan: Build"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}